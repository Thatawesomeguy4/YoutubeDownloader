<Page x:Class="YoutubeDownloader.AudioCopyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YoutubeDownloader"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AudioCopyPage">

    <Grid Background="Black">
        <Label Content="Create an audio only copy of this video?" Foreground="Snow" HorizontalAlignment="Left" Margin="279,33,0,0" VerticalAlignment="Top"/>
        <Button x:Name="yesButton" Content="Yes" HorizontalAlignment="Left" Margin="208,103,0,0" VerticalAlignment="Top" Width="100" Height="33" Click="YesButton_Click"/>
        <Button x:Name="noButton" Content="No" HorizontalAlignment="Left" Margin="462,103,0,0" VerticalAlignment="Top" Width="100" Height="33" Click="NoButton_Click"/>
        <Label Content="Audio Strip Progress" Foreground="Snow" HorizontalAlignment="Left" Margin="337,187,0,0" VerticalAlignment="Top"/>
        <ProgressBar x:Name="audioProgress" HorizontalAlignment="Left" Height="31" Margin="10,240,0,0" VerticalAlignment="Top" Width="780"/>

    </Grid>
</Page>
